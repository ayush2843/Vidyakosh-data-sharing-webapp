<% include partials/header %>
    <div class="container">

        <div class="form-container">
            <p class="form-title">Register</p>
            <hr class="account-form__line">

            <form action="/register" method="POST">
                <div class="form-group">
                    <label>Username</label>
                    <input class="form-text" type="text" name="username" placeholder="Enter Username">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input class="form-text" type="password" name="password" placeholder="Enter Password">
                </div>
                <div class="form-group">
                    <label>Confirm Password</label>
                    <input class="form-text" type="password" name="c_password" placeholder="Confirm Password">
                </div>
                <button type="submit" class="btn btn-new btn-large shadow">Register</button>
            </form>
        </div>
    </div>

    <% include partials/footer %>